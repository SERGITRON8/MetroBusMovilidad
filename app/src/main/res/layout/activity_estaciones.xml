<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".estaciones">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/userStatus"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="Viajando"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:textColor="#958C8C"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario de metro"
        android:textColor="#3F51B5"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:text="Ubicacion actual"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <Button
        android:id="@+id/btn_ubilinea1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo3"
        android:text="Linea 1" />

    <Spinner
        android:id="@+id/spr_ubilinea1"
        android:layout_width="261dp"
        android:layout_height="49dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/btn_ubilinea2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo3"
        android:text="Linea 2" />


    <Spinner
        android:id="@+id/spr_ubilinea2"
        android:layout_width="263dp"
        android:layout_height="49dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="114dp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Destino"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <Button
        android:id="@+id/btn_deslinea1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo3"
        android:text="Linea 1" />

    <Spinner
        android:id="@+id/spr_deslinea1"
        android:layout_width="268dp"
        android:layout_height="49dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/btn_deslinea2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo3"
        android:text="Linea 2" />


    <Spinner
        android:id="@+id/spr_deslinea2"
        android:layout_width="266dp"
        android:layout_height="49dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/btn_apoyo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo"
        android:text="SOLICITA APOYO"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuando un usuario se encuentra viajando no puede solicitar mas apoyo."
        android:textColor="#515151"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:background="@drawable/boton_redondo4"
        android:text="logout"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textStyle="bold" />

</LinearLayout>