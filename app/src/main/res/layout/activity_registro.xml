<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45FFFFFF"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".registro">

    <ImageView
        android:id="@+id/identificacion"
        android:layout_width="339dp"
        android:layout_height="213dp"
        android:layout_gravity="center"
        android:paddingTop="10"
        android:src="@drawable/cuentas"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/TV_usu"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:hint="Nombre"
        android:inputType="number"

        android:textSize="30sp" />

    <EditText
        android:id="@+id/TV_usua"
        android:layout_width="293dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:hint="Correo"
        android:inputType="text"

        android:textSize="30sp" />

    <EditText
        android:id="@+id/TV_pas"
        android:layout_width="293dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/TV_num"
        android:layout_width="292dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:hint="Telefono"
        android:inputType="numberPassword"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/boton_redondo"
        android:text="Registrar"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#CE000000"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <ProgressBar
        android:id="@+id/loadBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:progressDrawable="@drawable/load"
        android:visibility="invisible" />


</LinearLayout>